<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_advice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_advice_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@android:drawable/ic_menu_help" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您有什么问题或建议想对我们说?"
            android:textColor="#0074BF" />

        <EditText
            android:id="@+id/activity_advice_et_text"
            style="@style/my_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:gravity="top|left"
            android:hint="您的宝贵意见，就是我们进步的源泉"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请详细描述您遇到的问题，有助于我们快速定位并解决问题，或留下您的宝贵的建议或意见，我们会认真进行评估！"
            android:textColor="#ADADAD"
            android:textSize="11dp" />
        
        
        <Button 
            android:id="@+id/fragment_advice_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问 题 提 交"
            android:textColor="#FFF"
            android:background="@drawable/login"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>