<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.fireeyes.activity.MainActivity" >

    <FrameLayout
        android:id="@+id/activity_main_framlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/activity_homepage_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/activity_rbtn_home"
            style="@style/main_activity_radiobtn_style"
            android:checked="true"
            android:drawableTop="@drawable/ic_launcher"
            android:tag="0"
            android:text="首页" />

        <RadioButton
            android:id="@+id/activity_rbtn_history"
            style="@style/main_activity_radiobtn_style"
            android:drawableTop="@drawable/ic_launcher"
            android:tag="1"
            android:text="历史" />

        <RadioButton
            android:id="@+id/activity_rbtn_new"
            style="@style/main_activity_radiobtn_style"
            android:drawableTop="@drawable/ic_launcher"
            android:tag="2"
            android:text="新建" />

        <RadioButton
            android:id="@+id/activity_rbtn_query"
            style="@style/main_activity_radiobtn_style"
            android:drawableTop="@drawable/ic_launcher"
            android:tag="3"
            android:text="查勘" />

        <RadioButton
            android:id="@+id/activity_rbtn_more"
            style="@style/main_activity_radiobtn_style"
            android:drawableTop="@drawable/ic_launcher"
            android:tag="4"
            android:text="更多" />
    </RadioGroup>

</LinearLayout>