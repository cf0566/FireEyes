<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_newbuild_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_save" />

        <TextView
            android:id="@+id/activity_newbuild_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="新建任务"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_newbuild_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_save" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:text="目的"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/activity_newbuild_rbtn_destination1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_centerInParent="true"
                    android:text="火灾风险评估"
                    android:textSize="12sp" />
                <RadioButton
                    android:id="@+id/activity_newbuild_rbtn_destination2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/activity_newbuild_rbtn_destination1"
                    android:text="消防验收"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="行业分类"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_newbuild_tv_divide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@android:drawable/ic_menu_save"
                    android:gravity="center_vertical"
                    android:text="请输入行业分类"
                    android:layout_marginLeft="40dp"
                    android:textColor="#A2A2A2"
                    android:textSize="12sp" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="评估名称"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/activity_newbuild_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="请输入名称"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:textColor="#A2A2A2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="评估组员"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_newbuild_tv_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@android:drawable/ic_menu_save"
                    android:gravity="center_vertical"
                    android:text="请添加组员"
                    android:layout_marginLeft="40dp"
                    android:textColor="#A2A2A2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="单位信息"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_newbuild_tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@android:drawable/ic_menu_save"
                    android:gravity="center_vertical"
                    android:text="中国科技大学"
                    android:textColor="#A2A2A2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="检查项生成"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/activity_newbuild_iv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="分配任务"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/activity_newbuild_iv_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="平面图"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/activity_newbuild_iv_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:src="@android:drawable/ic_menu_save"
                        android:textColor="#A2A2A2"
                        android:textSize="12sp" />
                </LinearLayout>
                
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView 
                        android:id="@+id/activity_newbuild_iv"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/pic"
                        android:padding="10dp"
                        />

                    <ImageView
                        android:id="@+id/activity_newbuild_iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/activity_newbuild_iv"
                        android:layout_alignParentBottom="true"
                        android:src="@android:drawable/ic_dialog_alert" />
                    
                </RelativeLayout>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                >
                <Button 
                    android:id="@+id/activity_newbuild_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFF"
                    android:background="@drawable/login"
                    />
                 <Button 
                    android:id="@+id/activity_newbuild_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="提交"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFF"
                    android:background="@drawable/login"
                    />
                
            </LinearLayout>
            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>