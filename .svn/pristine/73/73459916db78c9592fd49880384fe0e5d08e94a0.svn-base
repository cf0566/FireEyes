<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_personal_inform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置个人信息"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_personal_inform_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_personal_inform_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#FFF"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#DADADA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.edu.fireeyes.views.CircleImageView
            android:id="@+id/activity_personal_inform_iv_user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/activity_personal_inform_tv_changeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/go5"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="点击更换头像"
            android:textSize="18sp"
            android:textColor="#010101" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#DADADA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="用户名"
           
            android:textColor="#5A5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
             android:layout_weight="1"
            android:textColor="#F00" />

        <EditText
            android:id="@+id/activity_personal_inform_etname"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="邮箱"
            android:textColor="#5A5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
             android:layout_weight="1"
            android:textColor="#F00" />

        <EditText
            android:id="@+id/activity_personal_inform_email"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="电话"
            android:textColor="#5A5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
             android:layout_weight="1"
            android:textColor="#F00" />

        <EditText
            android:id="@+id/activity_personal_inform_tel"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="单位"
            android:layout_weight="1"
            android:textColor="#5A5A5A" />

        <EditText
            android:id="@+id/activity_personal_inform_company"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    

</LinearLayout>