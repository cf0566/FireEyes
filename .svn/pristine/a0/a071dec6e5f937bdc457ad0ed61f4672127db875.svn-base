<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_add_people_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加组员"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_add_people_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_help" />
        <TextView
            android:id="@+id/activity_add_people_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="#FFF"
          />
        
    </RelativeLayout>
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#F7F7F7"
		android:padding="10dp"
        >
        <EditText 
            android:id="@+id/activity_add_people_et_peoplename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_help"
            style="@style/my_edittext_style"
            android:hint="请输入搜索内容"
            />
        
    </LinearLayout>
     <ListView 
         android:id="@+id/activity_add_people_lv_people"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#FFFFFF"
         ></ListView>
     

</LinearLayout>
