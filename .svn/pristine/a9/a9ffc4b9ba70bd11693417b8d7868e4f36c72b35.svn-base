<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_social_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
             android:src="@android:drawable/ic_menu_help" />

        <TextView
            android:id="@+id/activity_social_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="社会单位"
            android:textColor="#FFF"
            android:textSize="20sp" />

       
    </RelativeLayout>
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="#EDEDED"        
        >
        <TextView 
            android:id="@+id/activity_social_details_tv_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_menu_help"
            android:drawableLeft="@android:drawable/ic_menu_help"
            />
        <TextView 
            android:id="@+id/activity_social_details_tv_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评估记录"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_menu_help"
            android:drawableLeft="@android:drawable/ic_menu_help"
            />
        <TextView 
            android:id="@+id/activity_social_details_tv_protect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="维保记录"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_menu_help"
            android:drawableLeft="@android:drawable/ic_menu_help"
            />
        <TextView 
            android:id="@+id/activity_social_details_tv_eltric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电器检测记录"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_menu_help"
            android:drawableLeft="@android:drawable/ic_menu_help"
            />
        <TextView 
            android:id="@+id/activity_social_details_tv_avoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="防雷检测记录"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_menu_help"
            android:drawableLeft="@android:drawable/ic_menu_help"
            />
        
    </LinearLayout>

</LinearLayout>
