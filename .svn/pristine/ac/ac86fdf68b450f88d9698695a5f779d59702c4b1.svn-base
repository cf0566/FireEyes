<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_check_created_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="检测项生成"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_check_created_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_help" />

        <ImageView
            android:id="@+id/activity_check_created_iv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_help" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/activity_check_created_tv_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_help"
                    android:gravity="center_vertical"
                    android:text="资料检查" />

                <CheckBox
                    android:id="@+id/activity_check_created_check_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/activity_check_created_iv_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_help" />
            </LinearLayout>

            <com.edu.fireeyes.views.MyListView
                android:id="@+id/activity_check_created_lv_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edu.fireeyes.views.MyListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/activity_check_created_tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_help"
                    android:gravity="center_vertical"
                    android:text="区域检查" />

                <CheckBox
                    android:id="@+id/activity_check_created_check_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/activity_check_created_iv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_help" />
            </LinearLayout>

            <com.edu.fireeyes.views.MyListView
                android:id="@+id/activity_check_created_lv_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edu.fireeyes.views.MyListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/activity_check_created_tv_import"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_help"
                    android:gravity="center_vertical"
                    android:text="重点部位" />

                <CheckBox
                    android:id="@+id/activity_check_created_check_import"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/activity_check_created_iv_import"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_help" />
            </LinearLayout>

            <com.edu.fireeyes.views.MyListView
                android:id="@+id/activity_check_created_lv_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.edu.fireeyes.views.MyListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>