<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_personal_inform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置个人信息"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_personal_inform_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_help" />

        <TextView
            android:id="@+id/activity_personal_inform_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#FFF"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#DADADA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.edu.fireeyes.views.CircleImageView
            android:id="@+id/activity_personal_inform_iv_user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/activity_personal_inform_tv_changeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@android:drawable/ic_delete"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="点击更换头像"
            android:textColor="#010101" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#DADADA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="用户名"
           
            android:textColor="#5A5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
             android:layout_weight="1"
            android:textColor="#F00" />

        <EditText
            android:id="@+id/activity_personal_inform_etname"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="邮箱"
            android:textColor="#5A5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
             android:layout_weight="1"
            android:textColor="#F00" />

        <EditText
            android:id="@+id/activity_personal_inform_email"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="电话"
            android:textColor="#5A5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
             android:layout_weight="1"
            android:textColor="#F00" />

        <EditText
            android:id="@+id/activity_personal_inform_tel"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="职称"
            android:layout_weight="1"
            android:textColor="#5A5A5A" />

        <EditText
            android:id="@+id/activity_personal_inform_position"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="部门"
            android:layout_weight="1"
            android:textColor="#5A5A5A" />

        <EditText
            android:id="@+id/activity_personal_inform_department"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="QQ"
            android:layout_weight="1"
            android:textColor="#5A5A5A" />

        <EditText
            android:id="@+id/activity_personal_inform_QQ"
            style="@style/my_edittext_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             android:paddingLeft="10dp"
         />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_personal_inform_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:gravity="center_vertical"
            android:text="性别"
            android:layout_weight="1"
            android:textColor="#5A5A5A" />
		<TextView 
		    android:id="@+id/activity_personal_inform_tv_change_sex"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="女"
		    android:gravity="center_vertical"
		    android:drawableRight="@android:drawable/ic_menu_edit"
		    />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA" />
    

</LinearLayout>