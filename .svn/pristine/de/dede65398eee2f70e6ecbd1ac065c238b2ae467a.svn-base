<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_normal_example_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标准规范"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_normal_example_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_help" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="目录"
                android:textSize="20sp" />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                >
                <TextView 
                    android:id="@+id/activity_normal_example_tv_num1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一、建筑设计防火规范"
                     android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    />
                <CheckBox 
                    android:id="@+id/activity_normal_example_cbox_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                
            </LinearLayout>
            <com.edu.fireeyes.views.MyListView 
                android:id="@+id/activity_normal_example_lv_num1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                ></com.edu.fireeyes.views.MyListView>
            
                     <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                >
                <TextView 
                    android:id="@+id/activity_normal_example_tv_num2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="二、安全标注及其使用导则"
                     android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    />
                <CheckBox 
                    android:id="@+id/activity_normal_example_cbox_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                
            </LinearLayout>
            <com.edu.fireeyes.views.MyListView 
                android:id="@+id/activity_normal_example_lv_num2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                ></com.edu.fireeyes.views.MyListView>
            
            
            
                     <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#FFF"
                android:gravity="center_vertical"
                >
                <TextView 
                    android:id="@+id/activity_normal_example_tv_num3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="三、石油化工企业可燃气体和有毒气体检测"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    />
                <CheckBox 
                    android:id="@+id/activity_normal_example_cbox_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                
            </LinearLayout>
            <com.edu.fireeyes.views.MyListView 
                android:id="@+id/activity_normal_example_lv_num3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                ></com.edu.fireeyes.views.MyListView>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>