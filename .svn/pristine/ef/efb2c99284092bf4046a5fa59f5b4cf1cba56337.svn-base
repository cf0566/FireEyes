<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_main_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="首页"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_main_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_help" />
    </RelativeLayout>

    <com.gc.flashview.FlashView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_homepage_flashview"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:effect="accordion" />
    
    <GridView 
        android:id="@+id/fragment_homepage_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:scrollbars="none"
        android:layout_weight="1"
        ></GridView>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fenxianpingguguangcahang"
        />
    
    

</LinearLayout>