<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >
		<ImageView
            android:id="@+id/activity_check_created2_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/activity_check_created2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="检测项生成"
            android:textColor="#FFF"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/activity_check_created2_iv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/help" />
    </RelativeLayout>
    <ExpandableListView
        android:layout_marginTop="10dip"
        android:id="@+id/elv_activity_check_created2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:divider="#FFF"
        android:dividerHeight="1dip"
        android:childDivider="#FFF" 
        android:groupIndicator="@null"
        android:listSelector="#00000000"
        android:background="#F3F3F3"
        android:descendantFocusability="blocksDescendants"/>

</LinearLayout>
