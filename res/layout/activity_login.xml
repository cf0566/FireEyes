<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_login_tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#FFF" />
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_login_et_tel"
        style="@style/my_edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/shoujihao"
        android:drawablePadding="8dp"
        android:hint="请输入手机号" />

    <EditText
        android:id="@+id/activity_login_et_password"
        style="@style/my_edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
           android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/mima"
        android:hint="密码"
        android:password="true" />

    <Button
        android:id="@+id/activity_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login"
        android:textSize="17sp"
        android:textColor="#FFF"
        android:text="立即登陆" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView 
            android:id="@+id/activity_login_tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#0E89D6"
            />
        
        
        <CheckBox 
            android:id="@+id/activity_login_cBox_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:button="@drawable/login_checkbox_selector"
            android:textColor="#989898"
            android:gravity="center_vertical"
            android:textSize="12sp"
            />
        
    </LinearLayout>

</LinearLayout>