<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_my_message_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="消息详情"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_my_message_detail_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/back" />
    </RelativeLayout>
	<TextView 
	    android:padding="10dip"
	    android:id="@+id/tv_title_activity_my_message_detail"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#0E88D5"
	    android:textSize="16sp"
	    />
	<TextView style="@style/my_divide_line" />
	<TextView 
	    android:id="@+id/tv_content_activity_my_message_detail"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dip"
	    />
</LinearLayout>
