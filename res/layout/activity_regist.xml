<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_regist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_regist_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#FFF" />
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_regist_et_name"
        style="@style/my_edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
         android:padding="5dp"
         android:textSize="15sp"
         android:drawablePadding="8dp"
        android:drawableLeft="@drawable/pinggurenxingming"
        android:hint="评估人姓名"
       />
    <EditText
        android:id="@+id/activity_regist_et_password"
        style="@style/my_edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/mima"
        android:padding="5dp"
        android:hint="密码"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:password="true" />    
    <EditText
        android:id="@+id/activity_regist_et_tel"
        style="@style/my_edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:phoneNumber="true"
        android:padding="5dp"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/shoujihao"
        android:hint="请输入手机号" />
    <EditText
        android:id="@+id/activity_regist_et_company"
        style="@style/my_edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/pinggurenxingming"
        android:hint="评估单位名称"
       />

    <Button
        android:id="@+id/activity_regist_btn_regist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/login"
        android:text="立即注册"
        android:textColor="#FFF"
        android:textSize="20sp" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
    <CheckBox 
        android:id="@+id/activity_regist_cbox_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意"
        android:textColor="#999999"
        android:paddingLeft="5dp"
        android:button="@drawable/login_checkbox_selector"
        android:textSize="12sp"
        />
    <TextView 
        android:id="@+id/activity_regist_tv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《火灾风险评估服务协议》"
        android:textColor="#0D88D5"
        android:textSize="12sp"
        />
    </LinearLayout>
    
</LinearLayout>