<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_social_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
             android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_social_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="社会单位"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_social_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           android:src="@drawable/help" />
    </RelativeLayout>
    
      <EditText 
          android:id="@+id/activity_social_et_search"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="请输入名称搜索"
          style="@style/my_edittext_style"
          android:layout_margin="10dp"
          android:drawableLeft="@drawable/shousuo2"
          android:drawablePadding="8dp"
          android:padding="5dp"
          />
      
      <ListView 
          android:id="@+id/activity_social_lv_company_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          ></ListView>

</LinearLayout>
