<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_divide_task_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableRight="@android:drawable/ic_btn_speak_now"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="李红银"
        android:textSize="15sp" />

    <com.edu.fireeyes.views.MyListView
        android:id="@+id/item_divide_task_lv_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:listSelector="#00000000"
        android:padding="10dp" >
    </com.edu.fireeyes.views.MyListView>

    <LinearLayout
        android:id="@+id/item_divide_task_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_divide_task_tv_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料检查、变配电室"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="#919191"
            android:ellipsize="end"
            android:textSize="12sp"
             />
        
        <TextView 
            android:id="@+id/item_divide_task_tv_change_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textColor="#F00"
            android:textSize="12sp"
            />
    </LinearLayout>

</LinearLayout>