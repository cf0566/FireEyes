<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/item_divide_task_listview_item_ll_cbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/item_divide_task_listview_item_cbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:padding="10dp"
            android:text="装修设计报告"
            android:textColor="#595959" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_divide_task_listview_item_ll_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_divide_task_listview_item_tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="资料检查、变配电室"
            android:textColor="#919191"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_divide_task_listview_item_tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textColor="#FF6100"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>