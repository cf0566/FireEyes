<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_history_advice_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="防火卷帘" />

    <TextView style="@style/my_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存在问题:"
            android:textColor="#D10101" />

        <TextView
            android:id="@+id/item_history_advice_tv_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="卷帘损坏" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_history_advice_iv_problem_icon"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#E7F5FF"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见及建议:"
            android:textColor="#D10101" />

        <TextView
            android:id="@+id/item_history_advice_tv_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#636363"
            android:text="防火卷帘的耐火记录不应该少于3.00ah平均升降速度：3米/分钟。" />
    </LinearLayout>

