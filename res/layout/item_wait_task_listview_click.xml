<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp"
    android:id="@+id/item_wait_task_listview_click_parent_linear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <TextView 
            android:id="@+id/item_wait_task_listview_click_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:layout_gravity="center_vertical"
            android:text="装修燃烧性能等级规范要求"
            />
        <ImageView 
            android:id="@+id/item_wait_task_listview_click_iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tianjia"
            />
    </LinearLayout>
      

</LinearLayout>