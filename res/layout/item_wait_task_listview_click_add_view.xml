<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wait_task_listview_click_linearlayout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RadioGroup
        android:id="@+id/item_wait_task_listview_click_radiogroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/item_wait_task_listview_click_rbtn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:button="@drawable/rbtn_choose_right_or_not"
            android:checked="true"
            android:text="是"
            android:textColor="#5A5A5A" />

        <RadioButton
            android:id="@+id/item_wait_task_listview_click_rbtn_uncheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:button="@drawable/rbtn_choose_right_or_not"
            android:text="否"
            android:textColor="#5A5A5A" />

        <RadioButton
            android:id="@+id/item_wait_task_listview_click_rbtn_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:button="@drawable/rbtn_choose_right_or_not"
            android:text="无"
            android:textColor="#5A5A5A" />
    </RadioGroup>

    <Button
        android:id="@+id/item_wait_task_listview_click_btn_tis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0E88D5"
        android:text="备注"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/item_wait_task_listview_click_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FE1100"
        android:text="删除"
        android:textColor="#FFF"
        android:textSize="15sp" />

</LinearLayout>